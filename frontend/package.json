{
  "name": "chainforge-frontend",
  "version": "1.0.0",
  "description": "ChainForge mobile-first goal tracking frontend",
  "type": "module",
  "scripts": {
    "dev": "vite --host 0.0.0.0",
    "build": "vite build",
    "preview": "vite preview --host 0.0.0.0",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --plugin-search-dir . --check . && eslint .",
    "format": "prettier --plugin-search-dir . --write .",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:mobile": "playwright test --project=mobile",
    "test:ios": "playwright test --project=ios",
    "test:android": "playwright test --project=android",
    "test:perf": "lhci autorun",
    "lighthouse": "lighthouse http://localhost:5173 --output=html --output-path=./lighthouse-report.html",
    "clean": "rm -rf .svelte-kit dist node_modules/.vite",
    "docs": "typedoc --out docs src"
  },
  "devDependencies": {
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.40.0",
    "@sveltejs/adapter-auto": "^2.1.1",
    "@sveltejs/kit": "^1.27.4",
    "@sveltejs/vite-plugin-svelte": "^2.5.3",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.16",
    "@types/node": "^20.8.10",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitest/coverage-v8": "^0.34.6",
    "autoprefixer": "^10.4.16",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-svelte": "^2.35.1",
    "jsdom": "^22.1.0",
    "postcss": "^8.4.31",
    "prettier": "^3.0.3",
    "prettier-plugin-svelte": "^3.1.0",
    "svelte": "^4.2.7",
    "svelte-check": "^3.6.0",
    "tailwind-merge": "^3.3.1",
    "tailwind-variants": "^2.1.0",
    "tailwindcss": "^3.3.5",
    "tslib": "^2.6.2",
    "typedoc": "^0.25.3",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "vitest": "^0.34.6"
  },
  "dependencies": {
    "@internationalized/date": "^3.8.2",
    "@stripe/stripe-js": "^2.1.11",
    "chart.js": "^4.4.0",
    "chartjs-adapter-date-fns": "^3.0.0",
    "date-fns": "^2.30.0",
    "just-throttle": "^4.2.0",
    "lucide-svelte": "^0.536.0",
    "sortablejs": "^1.15.0",
    "svelte-french-toast": "^1.2.0",
    "svelte-gestures": "^4.0.0",
    "svelte-hero-icons": "^5.2.0",
    "svelte-persisted-store": "^0.7.0",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "keywords": [
    "goal-tracking",
    "accountability",
    "mobile-first",
    "svelte",
    "typescript",
    "pwa"
  ],
  "author": "ChainForge Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}
